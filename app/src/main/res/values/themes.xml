<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--style name="Base.Theme.AudioBook" parent="Theme.Design.Light.NoActionBar"-->
    <style name="Base.Theme.AudioBook" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowNoTitle">true</item> <!-- Disable the title bar -->
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimary">@android:color/holo_orange_dark</item>
        <item name="android:colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textColorPrimary">@android:color/holo_orange_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_neutral80</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_neutral80</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <style name="Theme.AudioBook" parent="Base.Theme.AudioBook" />
</resources>