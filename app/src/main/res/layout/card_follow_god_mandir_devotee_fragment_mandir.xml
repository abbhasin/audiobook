<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFragmentFollowGodMandirDevotee_MandirCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9C5"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardFragmentFollowGodMandirDevotee_MandirCardMandirImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFF9C5"
            android:contentDescription="menu item image"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/cardFragmentFollowGodMandirDevotee_MandirCardMandirTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arya Samaj Mandir"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#CE9033"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cardFragmentFollowGodMandirDevotee_MandirCardMandirLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JanakPuri, New Delhi"
                android:textAlignment="center"
                android:textColor="#17901C"
                android:textSize="12sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/cardFragmentFollowGodMandirDevotee_MandirCardFollowBtn"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFB0ECE6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Follow" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>