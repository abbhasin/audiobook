<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cvManana"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:background="@color/design_default_color_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">
    <LinearLayout
        android:background="@color/design_default_color_primary_dark"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:orientation="vertical"
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_video_heading_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/design_default_color_primary_variant"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ondemand_video"/>

            <LinearLayout
                android:layout_width="317dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/card_video_heading_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Some Video Title"
                        android:textSize="25sp"
                        android:textColor="@color/material_dynamic_primary90" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/contentTextStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_video_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="This is a description of the video. It contains aarti of Lord Vishnu at the great XYZ Temple."
                    android:textColor="@color/design_default_color_on_primary"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/design_default_color_primary_dark"
                android:gravity="center_horizontal"
                android:id="@+id/contentFiles">

<!--                <ImageView-->
<!--                    android:id="@+id/card_image_view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:adjustViewBounds="true"-->
<!--                    android:cropToPadding="false"-->
<!--                    android:visibility="visible"-->

<!--                    card_view:srcCompat="@color/design_default_color_primary" />-->

<!--                <VideoView-->
<!--                    android:id="@+id/card_video_view"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:layout_weight="1"-->
<!--                    android:visibility="gone" />-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:background="#000"
                    android:scaleType="center"
                    android:id="@+id/media_container">

                    <ImageView
                        android:id="@+id/card_video_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#fff"
                        android:scaleType="centerInside"
                        android:visibility="visible"
                        />
                    <VideoView
                        android:id="@+id/card_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/volume_up"
                        android:layout_gravity="end|bottom"
                        android:id="@+id/card_video_volume_control"
                        android:alpha="0.2"
                        android:animateLayoutChanges="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="25dp"/>

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_video_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:visibility="gone"
                        android:layout_gravity="center" />


                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="4dp"
                android:paddingBottom="7dp"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.0"
                    android:gravity="left">

                    <ImageButton
                        android:id="@+id/bt_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_like"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/countLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="(3)"
                        android:textColor="#999"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left">

                    <ImageButton
                        android:id="@+id/bt_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_share"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>