<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/cardFragmentFollowGodMandirDevotee_TopLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFF9C5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFF9C5"
            android:contentDescription="menu item image"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ashok Acharya"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#CE9033"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteePostsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1180"
                    android:layout_marginRight="5dp"
                    android:textColor="#17901C"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteePosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Posts"
                    android:textColor="#17901C"
                    android:textSize="12sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardFollowBtn"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFB0ECE6"
                android:text="Follow"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>