<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/cardFragmentFollowGodMandirDevotee_TopLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOffWhite"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:padding="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteeImage"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="menu item image"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ashok Acharya"
                android:textAlignment="center"
                android:padding="4dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextFollowCardTitle"
                android:textSize="@dimen/TextMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteePostsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1180"
                    android:textAlignment="center"
                    android:padding="4dp"
                    android:textColor="@color/colorTextFollowCardDescription"
                    android:textSize="@dimen/TextSmall" />

                <TextView
                    android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardDevoteePosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="4dp"
                    android:textColor="@color/colorTextFollowCardDescription"
                    android:textSize="@dimen/TextSmall"
                    android:text="Posts"
                     />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorItemDetailsBackground"
                app:cardCornerRadius="15dp">


            <Button
                android:id="@+id/cardFragmentFollowGodMandirDevotee_DevoteeCardFollowBtn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorItemDetailsBackground"
                android:padding="4dp"
                android:textSize="@dimen/TextMedium"
                android:textAllCaps="false"
                android:text="Follow" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>