<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPujariPageHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cardPujariPageHeaderImage"
                android:layout_width="0dp"
                android:layout_height="142dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/bell_icon" />

            <TextView
                android:id="@+id/cardPujariPageHeaderTitleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center"
                android:text="Pandit Ashok Acharya"
                android:textColor="@color/black"
                android:textSize="@dimen/TextExtraLarge" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopBackground"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPujariPageHeaderFollowBtnCV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:id="@+id/cardPujariPageHeaderFollowBtnLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorItemDetailsBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cardPujariPageHeaderFollowBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorItemDetailsBackground"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Following"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTopBackground"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorItemDetailsBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:text="Followings:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium" />

                    <TextView
                        android:id="@+id/cardPujariPageHeaderFollowersCountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:text="786"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>