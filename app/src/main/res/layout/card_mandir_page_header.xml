<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMandirPageHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardMandirPageHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/cardMandirPageHeaderTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTopBackground"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Gurudwara JanakPuri"
                android:textColor="@color/black"
                android:textSize="@dimen/TextExtraLarge" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopBackground"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMandirPageHeaderFollowBtnCV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:id="@+id/cardMandirPageHeaderFollowBtnLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorItemDetailsBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cardMandirPageHeaderFollowBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorItemDetailsBackground"
                        android:gravity="center"
                        android:text="Following"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTopBackground"
                card_view:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorItemDetailsBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Followings:"
                        android:paddingTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium" />

                    <TextView
                        android:id="@+id/cardMandirPageHeaderFollowersCountText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="786"
                        android:paddingBottom="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/TextMedium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTopBackground"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="@dimen/TextLarge" />

            <TextView
                android:id="@+id/cardMandirPageHeaderAddressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorItemTitleBackground"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="A 3/567 Gurudwara, Janapuri New Delhi - 10058"
                android:textColor="@color/black"
                android:textSize="@dimen/TextMedium" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>